<div class='frost-application-bar'>

  <!-- Logo -->
  {{component logo}}

  {{#each categories as |category index|}}
    {{#if category.isVisible}}
      {{nav-category
        icon=category.icon
        name=category.name
        pack=category.pack
        hook=(concat hook '-category-' index)
      }}
    {{/if}}
  {{/each}}
  <!-- More Content -->
  {{yield}}
  <!-- User Menu -->
  {{component userMenu}}
</div>
{{liquid-modal}}
