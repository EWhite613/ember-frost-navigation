{{yield}}
<div class='frost-application-bar'>
  {{#yield-slot 'logo'}}
    {{yield}}
  {{/yield-slot}}
  {{#each categories as |category index|}}
    {{#if category.isVisible}}
      {{nav-category
        icon=category.icon
        name=category.name
        pack=category.pack
        hook=(concat hook '-category-' index)
      }}
    {{/if}}
  {{/each}}
  {{#yield-slot 'actions'}}
    {{yield}}
  {{/yield-slot}}
</div>
{{liquid-modal}}
