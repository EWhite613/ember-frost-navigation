<div class='frost-application-bar'>
  <!-- Logo -->
  {{component logo
    hook=(concat hook '-logo')
  }}

  {{#each categories as |category index|}}
    {{nav-category
      options=category
      hook=(concat hook '-category-' index)
    }}
    {{else}}
      {{yield to='inverse'}}
  {{/each}}
  <!-- More Content -->
  {{yield}}
  <!-- User Menu -->
  {{component menu
    hook=(concat hook '-menu')
  }}
</div>
{{#liquid-if activeCategory class='nav-modal-outlet'}}
  {{nav-modal hook=(concat hook '-modal')}}
{{/liquid-if}}
